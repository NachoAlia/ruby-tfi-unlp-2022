<h1>New user</h1>
<br>
<%= form_with url: admins_create_user_path, local:true   do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :password %><br>
    <%= form.text_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation %><br>
    <%= form.text_field :password_confirmation%>
  </div>
  <br>
  <div>
    <%= form.label :role %><br>
    <%= form.select(:role, [['Admin','admin'],['Staff','staff']]) %>
  </div>
  <div>
    <%= form.label :sucursal %><br>
    <%= form.select(:sucursal, @sucursals.ids, include_blank:true) %>
  </div>
<br>
  <div>
    <%= form.submit "Accept", class:'form_submit'%>
  </div>
<% end %>
<%= button_to "Go Back", :back, method: :get %>
