<h1>Users</h1>
<p>Number of users: <%=@users.count%></p>
<%= link_to 'New', admins_new_user_path%>
<%= link_to 'Go Back', admins_path, method: :get%>
<ul>
  <% @users.each do |user| %>
    <li>Email: <%=user.email%></li>
    <li>Role: <%=user.role%></li>
    <br>
    <li>Options :</li>
    <li><%= link_to "Edit", admins_edit_user_path(id:user.id)%></li>
    <li>
      <%= link_to "Delete", admins_user_destroy_path(id:user.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}%>
    </li>
    <li>
      <%= link_to "Delete(force)", admins_user_force_destroy_path(id:user.id), data: {turbo_method: :delete, turbo_confirm: 'Are you sure? All the appointments of this user will be deleted, including him.'}%>
    </li>
    <hr />
  <% end %>
</ul>
